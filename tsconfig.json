{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",          // Ensure React Native JSX is supported
    "moduleResolution": "node",     // Ensure proper module resolution
    "esModuleInterop": true,        // Allow compatibility with ES modules
    "noEmit": true,                 // Prevent TypeScript from emitting files
    "skipLibCheck": true,           // Skip library checks for faster builds
    "resolveJsonModule": true,      // Enable importing JSON files
    "types": ["react", "react-native"] // Include React and React Native types
  }
}
